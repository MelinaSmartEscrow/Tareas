{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Usuario</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ user.apellido }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="p-2 g-col-6">
        <a class="btn btn-info" href="{{ path('app_user_edit', {'id': user.id}) }}" role="button">Editar</a>
    </div>

    <div class="p-2 g-col-6">
    {{ include('user/_delete_form.html.twig') }}
    </div>

    <div class="p-2 g-col-6">
    <a class="btn btn-success" href="{{ path('app_user_index') }}" role="button">Volver a la Lista</a>
    </div>

    
{% endblock %}
